{% if view == "tpl" %}
	{% for value in list %}	
		{% if value.view == "input" %}
		<label class="{{prefix}}item  {{mod}}  {{value.mod}}">
			<input type="{{value.type}}" class="{{prefix}}control  {{mod}}  {{value.validate}}" {{value.required}} placeholder="{{value.placeholder}}" {% if value.view == "date" %}onfocus="(this.type='date')"{% endif %}>
		</label>
		{% endif %}
		{% if value.view == "select" %}
		<div class="{{prefix}}item  {{mod}}  {{value.mod}}">
			<select {{value.type}}>
				{% for option in value.option %}
					<option {{option.status}}>{{option.name}}</option>
				{% endfor %}
			</select>
		</div>
		{% endif %}
		{% if value.view == "textarea" %}
		<label class="{{prefix}}item  {{mod}}  {{value.mod}}">
			<textarea class="{{prefix}}control  {{mod}}  {{value.validate}}  is--textarea" {{value.required}} placeholder="{{value.placeholder}}"></textarea> 
		</label>
		{% endif %}
		{% if value.view == "captcha" %}
		<div class="{{prefix}}item  {{mod}}  {{value.mod}}">
			<img src="{{value.img}}"  class="{{prefix}}captcha-img  img-fluid"> 
		</div>
		{% endif %}
		{% if value.view == "checkbox" %}
			<div class="{{prefix}}item  {{mod}}  {{value.mod}}">
				{% for value in value.list %}
					<label class="{{prefix}}checkbox  {{mod}}">
						<input class="{{prefix}}checkbox-input  {{mod}}" type="{{value.type}}" {{value.status}}  id="{{value.id}}" name="{{value.form_id}}">
						<span class="{{prefix}}checkbox-icon  {{mod}}"></span>
						{% if value.name %}
						<span class="{{prefix}}checkbox-name  {{mod}}">
							{% if value.link %}
							<a href="{{value.link}}">{{value.name}}</a>
							{% else %}
							{{value.name}}
							{% endif %}
						</span>
						{% endif %}
					</label>
				{% endfor %}
			</div>
		{% endif %}
	{% endfor %}
{% endif %}


{% if view == "input" %}
	{% for value in list %}	
	<label class="{{prefix}}item  {{mod}}">
		<input type="{{value.type}}" class="{{prefix}}control  {{mod}}  {{value.validate}}" {{value.required}} placeholder="{{value.placeholder}}" {% if value.view == "date" %}onfocus="(this.type='date')"{% endif %}>
	</label>
	{% endfor %}
{% endif %}

{% if view == "file" %}
	<label class="{{prefix}}file  {{mod}}  {{color}}">
		<input type="file" class="{{prefix}}file-input  {{mod}}  {{validate}}">
		<div class="{{prefix}}file-name  {{mod}}  {{color}}">{{name}}</div>
	</label>
{% endif %}

{% if view == "agreement" %}
	<div class="{{prefix}}item  {{mod}}">
		<label class="{{prefix}}checkbox  {{mod}}">
			<input class="{{prefix}}checkbox-input  {{mod}}  {{validate}}" type="checkbox" checked id="agreement" name="agreement">
			<span class="{{prefix}}checkbox-icon  {{mod}}"></span>
			{{name}}
		</label>
	</div>
{% endif %}

{% if view == "checkbox" %}
	{% for value in list %}
		<label class="{{prefix}}checkbox  {{mod}}">
			<input class="{{prefix}}checkbox-input  {{mod}}" type="{{value.type}}" {{value.status}}  id="{{value.id}}" name="{{value.form_id}}">
			<span class="{{prefix}}checkbox-icon  {{mod}}"></span>
			{% if value.name %}
			<span class="{{prefix}}checkbox-name  {{mod}}">{{value.name}}</span>
			{% endif %}
		</label>
	{% endfor %}
{% endif %}

{% if view == "range" %}
	{% for value in list %}
	<div class="{{prefix}}range  {{mod}}"  data-filter-slider>
		<div class="{{prefix}}range-group  {{mod}}">
			<input class="{{prefix}}control"
					data-input-from
				   	name=""
				   	value="{{value.min}}"
				  	onchange="smartFilter.keyup(this)"/>
			<span></span>
			<input class="{{prefix}}control  {{mod}}" 
					data-input-to
				   	name=""
				   	value="{{value.max}}"
				   	onchange="smartFilter.keyup(this)"/>
		</div>
		<div class="{{prefix}}range-ui  {{mod}}"
			data-filter-slider-ul
			data-step="1"
			data-minval="{{value.min}}"
			data-maxval="{{value.max}}"
			data-from="{{value.min}}"
			data-to="{{value.max}}"></div>
	</div>
	{% endfor %}
{% endif %}